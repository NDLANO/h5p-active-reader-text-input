{
  "globals": {
    "H5P": "readonly",
    "H5PEditor": "readonly",
    "H5PIntegration": "readonly"
  },
  "env": {
    "browser": true,
    "node": true,
    "es2020": true
  },
  "extends": [
    "eslint-config-ndla-h5p",
    "plugin:jsdoc/recommended"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2020
  },
  "rules": {
    "object-curly-spacing": ["error", "always"]
  },
  "plugins": ["jsdoc"],
  "settings": {
    "jsdoc": {
      "preferredTypes": {
        "Function": "function"
      }
    }
  }
}
